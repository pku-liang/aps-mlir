// #[partition_cyclic_array([1])]
static mem_a: [u32; 16] = {1,2,3,4,5,6,7,8,1,1,1,1,1,1,1,1};

static var: u32;
#[opcode(7'b0101011)]
#[funct7(7'b0000000)]
rtype burst_add(rs1: u5, rs2: u5, rd: u5) {
    let r1: u32 = _irf[rs1];
    let r2: u32 = _irf[rs2];
    mem_a[0 +: ] = _burst_read[r1 +: 16];
    var = _mem[r1];
    let var2: u32 = _mem[r2];
    _burst_write[r1 +: 16] = mem_a[0 +: ];
    _irf[rd] = var2;
    var = var + var2;
    _mem[r1] = var + var2 + mem_a[2];
}